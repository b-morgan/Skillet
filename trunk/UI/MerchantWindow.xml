<!--
 #
 # A frame (well, button really) that is inserted into the merchant window
 # to allow the user to buy any reagents the vendor sells that are needed
 # for currently queued recipes.
 #
-->
<Frame name="SkilletMerchantBuyFrame" parent="UIParent" hidden="true">
	<Size>
		<AbsDimension x="120" y="50"/>
	</Size>
	<Frames>
		<Button name="$parentButton" inherits="GameMenuButtonTemplate" parent="SkilletMerchantBuyFrame" text="Reagents">
		  <Size>
			<AbsDimension x="100" y="18"/>
		  </Size>
		  <Anchors>
			<Anchor point="TOP">
				<Offset>
					<AbsDimension x="0" y="-25"/>
				</Offset>
			</Anchor>
		  </Anchors>
		  <Scripts>
		  	<OnEnter>
				Skillet:MerchantBuyButton_OnEnter(self)
			</OnEnter>
			<OnLeave>
				Skillet:MerchantBuyButton_OnLeave(self)
			</OnLeave>
			<OnClick>
				Skillet:BuyRequiredReagents()
			</OnClick>
		  </Scripts>
		</Button>
	</Frames>
</Frame>

</Ui>
